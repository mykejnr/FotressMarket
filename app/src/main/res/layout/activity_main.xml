<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/cardview_shadow_end_color"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="165dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-black"
            android:text="@string/app_caption"
            android:textColor="#F44336"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_marginTop="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                >
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/mainActivity_BtnGrid"
                    app:layout_constraintStart_toStartOf="parent"
                    android:hint="Search products..."
                    android:inputType="text"
                    android:autofillHints="name"
                    />

                <ImageButton
                    android:id="@+id/mainActivity_BtnGrid"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:contentDescription="Grid view"
                    android:background="@drawable/baseline_grid_view_24"
                    app:layout_constraintEnd_toStartOf="@id/mainActivity_BtnList"/>

                <ImageButton
                    android:id="@+id/mainActivity_BtnList"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:contentDescription="List view"
                    android:background="@drawable/baseline_format_list_bulleted_24"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:useDefaultMargins="true"
                android:padding="5dp"
                >

                <com.mikeltek.fotressmarket.views.components.CatalogueItem
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    app:productPrice="3.98"
                    app:productTitle="Big Size Executive Chair"
                    app:productImageSrc="https://fakestoreapi.com/img/81fPKd-2AYL._AC_SL1500_.jpg"
                    />
                <com.mikeltek.fotressmarket.views.components.CatalogueItem
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    app:productPrice="14.35"
                    app:productTitle="HP EliteBook 850g"
                    app:productImageSrc="https://fakestoreapi.com/img/81fPKd-2AYL._AC_SL1500_.jpg"
                    />
                <com.mikeltek.fotressmarket.views.components.CatalogueItem
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    app:productPrice="3.98"
                    app:productTitle="Big Size Executive Chair Large Size"
                    app:productImageSrc="https://fakestoreapi.com/img/81fPKd-2AYL._AC_SL1500_.jpg"
                    />
                <com.mikeltek.fotressmarket.views.components.CatalogueItem
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill_horizontal"
                    app:productPrice="3.98"
                    app:productTitle="Big Size Executive Chair"
                    app:productImageSrc="https://fakestoreapi.com/img/81fPKd-2AYL._AC_SL1500_.jpg"
                    />

            </GridLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>